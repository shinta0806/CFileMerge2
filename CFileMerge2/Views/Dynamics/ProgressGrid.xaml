            <TextBlock Text="処理中..." />
            <ProgressBar Minimum="0" Maximum="1" Value="{Binding ProgressValue, Mode=OneWay}" Width="200" Margin="20 0 0 0" />
        </StackPanel>
    </Border>
    
</RelativePanel>
